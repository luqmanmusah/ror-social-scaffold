<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
<ol>
  <% @user.friends.each do |friend| %>
    <li>
      <%= friend.name %>
      <% if @user == current_user %>
        <%= link_to "Unfriend",
                    friendships_destroy_path(friendship_id: Friendship.find_friendship(@user.id, friend.id)) %>
      <% end %>
    </li>
  <% end %>
</ol>

<h3> These people wants to be friend with <strong> <%= @user.name %> </strong> </h3>

<ol>
  <% @user.inverse_friendships.each do |friendship| %>
    <li>
      <%= User.find(friendship.user_id).name %>
      <%= button_to "Accept Invitation",
                    friendships_update_path(friendship_id: friendship.id) %>
      <%= button_to "Reject friendship",
                    friendships_destroy_path(friendship_id: friendship.id) %>
    </li>
  <% end %>
</ol>
